{
  "compilerOptions": {
    /* Modules */
    "target": "es2016",
    "module": "commonjs" /* Keep this as commonjs for ts-node */,
    "moduleResolution": "node",
    "esModuleInterop": true /* This allows 'import express from' to work */,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false /* <--- THIS IS THE CULPRIT. Set to false. */,
    /* ðŸ‘‡ ADD THESE TO MATCH ROOT CONFIG */
    "baseUrl": "../..", // Point up to the project root
    "paths": {
      "@/*": ["./*"],
      "@/frontend/*": ["src/frontend/src/*"],
      "@/backend/*": ["src/backend/src/*"],
      "@/app/*": ["src/app/*"]
    }
  },
  "include": ["src/**/*", "../../trigger.config.ts"],
  "exclude": ["node_modules"]
}
